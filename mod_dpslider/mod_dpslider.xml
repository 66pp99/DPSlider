<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3" method="upgrade" client="site">
	<name>MOD_DPSLIDER</name>
	<author>Digital Peak</author>
	<creationDate>Dec 2015</creationDate>
	<copyright>(C) 2012 - 2015 Digital Peak. All rights reserved.
	</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html
		GNU/GPL
	</license>
	<authorEmail>info@digital-peak.com</authorEmail>
	<authorUrl>joomla.digital-peak.com</authorUrl>
	<version>1.3.0</version>
	<description>MOD_DPSLIDER_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_dpslider">mod_dpslider.php</filename>
		<folder>tmpl</folder>
		<folder>language</folder>
		<folder>libraries</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="width" type="text" label="MOD_DPSLIDER_WIDTH_LABEL"
					description="MOD_DPSLIDER_WIDTH_DESC" />
				<field name="height" type="text" label="MOD_DPSLIDER_HEIGHT_LABEL"
					description="MOD_DPSLIDER_HEIGHT_DESC" />
				<field name="loop" type="radio" class="btn-group" default="1"
					label="MOD_DPSLIDER_LOOP_LABEL" description="MOD_DPSLIDER_LOOP_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="autoplay" type="text" label="MOD_DPSLIDER_AUTOPLAY_LABEL"
					description="MOD_DPSLIDER_AUTOPLAY_DESC" />
				<field name="effect" type="list" class="" default="slide"
					label="MOD_DPSLIDER_EFFECT_LABEL" description="MOD_DPSLIDER_EFFECT_DESC">
					<option value="slide">MOD_DPSLIDER_EFFECT_SLIDE</option>
					<option value="fade">MOD_DPSLIDER_EFFECT_FADE</option>
					<option value="cube">MOD_DPSLIDER_EFFECT_CUBE</option>
					<option value="coverflow">MOD_DPSLIDER_EFFECT_COVERFLOW</option>
				</field>
				<field name="textbefore" type="textarea" label="MOD_DPSLIDER_BEFORE_LABEL"
					description="MOD_DPSLIDER_BEFORE_DESC" rows="5" cols="50" filter="raw" />
				<field name="textafter" type="textarea" label="MOD_DPSLIDER_AFTER_LABEL"
					description="MOD_DPSLIDER_AFTER_DESC" rows="5" cols="50" filter="raw" />
				<field name="moduleclass_sfx" type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
			</fieldset>
			<fieldset name="slides">
				<field name="folder" type="folderlist" size="5"
					label="MOD_DPSLIDER_FOLDER_LABEL" directory="images/dpslider"
					hide_default="1" description="MOD_DPSLIDER_FOLDER_DESC" />
				<field name="slide0" type="editor" label="MOD_DPSLIDER_SLIDE_LABEL"
					description="MOD_DPSLIDER_SLIDE_DESC" filter="raw" />
				<field name="slide1" type="editor" label="MOD_DPSLIDER_SLIDE_LABEL"
					description="MOD_DPSLIDER_SLIDE_DESC" filter="raw" />
				<field name="slide2" type="editor" label="MOD_DPSLIDER_SLIDE_LABEL"
					description="MOD_DPSLIDER_SLIDE_DESC" filter="raw" />
				<field name="slide3" type="editor" label="MOD_DPSLIDER_SLIDE_LABEL"
					description="MOD_DPSLIDER_SLIDE_DESC" filter="raw" />
				<field name="slide4" type="editor" label="MOD_DPSLIDER_SLIDE_LABEL"
					description="MOD_DPSLIDER_SLIDE_DESC" filter="raw" />
				<field name="slide5" type="editor" label="MOD_DPSLIDER_SLIDE_LABEL"
					description="MOD_DPSLIDER_SLIDE_DESC" filter="raw" />
				<field name="slide6" type="editor" label="MOD_DPSLIDER_SLIDE_LABEL"
					description="MOD_DPSLIDER_SLIDE_DESC" filter="raw" />
				<field name="slide7" type="editor" label="MOD_DPSLIDER_SLIDE_LABEL"
					description="MOD_DPSLIDER_SLIDE_DESC" filter="raw" />
				<field name="slide8" type="editor" label="MOD_DPSLIDER_SLIDE_LABEL"
					description="MOD_DPSLIDER_SLIDE_DESC" filter="raw" />
				<field name="slide9" type="editor" label="MOD_DPSLIDER_SLIDE_LABEL"
					description="MOD_DPSLIDER_SLIDE_DESC" filter="raw" />
			</fieldset>
			<fieldset name="advanced">
				<field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field name="show_on_start_page_only" type="radio" class="btn-group"
					default="0" label="MOD_DPSLIDER_START_PAGE_LABEL" description="MOD_DPSLIDER_START_PAGE_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>
		</fields>
	</config>
	<updateservers>
		<server type="extension" priority="1" name="DPSlider"><![CDATA[https://joomla.digital-peak.com/index.php?option=com_ars&view=update&task=stream&format=xml&id=2]]></server>
	</updateservers>
</extension>
